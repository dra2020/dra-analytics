{
	"include": [
		"lib/**/*",
		"types/**/*"
	],
	"exclude": [
		"node_modules",
		"**/_tests__/*"
	],
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"declaration": true,
		"declarationDir": "dist/",
		"strict": true,
		"types": [
			"node",
			"jest"
		],
		"sourceMap": true,
		"noImplicitAny": true,
	}
}